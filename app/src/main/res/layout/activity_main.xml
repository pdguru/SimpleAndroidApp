<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="POSTS" android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
              android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/poststitle"/>

    <ListView android:layout_width="match_parent" android:layout_height="468dp"
              android:id="@+id/mainListView" android:layout_marginTop="5dp"
              app:layout_constraintTop_toBottomOf="@id/poststitle"/>

</android.support.constraint.ConstraintLayout>