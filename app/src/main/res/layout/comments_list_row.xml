<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
android:orientation="vertical">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/comment_by" android:text="user@email.com"
              android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
              android:layout_marginBottom="5dp"
              android:padding="3dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/comment_name" android:text="Comment title"
              android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
              android:padding="3dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/comment_body" android:text="Body"
              android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
              android:padding="3dp" android:singleLine="false"/>

</LinearLayout>