<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/row_title"
              android:text="Title" android:textSize="12dp"
              android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
              android:layout_marginStart="5dp" android:layout_marginTop="5dp"
              android:padding="3dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/row_body"
              android:text="Long body" android:textSize="12dp"
              android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/row_title"
              android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
              android:layout_marginStart="5dp" android:layout_marginTop="5dp"
              android:padding="3dp" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>